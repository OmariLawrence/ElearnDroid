<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to ElearnDroid2018!"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>

    <ImageButton
        android:id="@+id/teacher"
        android:layout_width="380dp"
        android:layout_height="340dp"
        android:src="@drawable/androidteacher"
        android:layout_below="@id/welcome"
        android:scaleType="fitXY"
        android:onClick="aboutandroidscreen"/>

    <Button
        android:id="@+id/topics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Topics"
        android:layout_below="@+id/teacher"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_bright"
        android:onClick="topicscreen"/>
    <Button
        android:id="@+id/quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz"
        android:layout_below="@+id/topics"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:onClick="quizscreen"/>
    <Button
        android:id="@+id/papers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Papers"
        android:layout_below="@+id/quiz"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_red_light"
        android:onClick="paperscreen"/>

</RelativeLayout>